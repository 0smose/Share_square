 	<%= link_to "Retour aux annonces", ads_path, class: "btn btn-primary btn-sm mt-3 ml-3" %> 
<div class="col col-8 mx-auto text-dark">

				<h2 class="mt-3"><%= @ad.title%></h2>

				<ul class="list-group list-group-flush mb-3 mt-3">
					<li class="list-group-item"><%= @ad.description %></li>
					<li class="list-group-item">Durée de l'activité : <%= @ad.duration %></li>
					<li class="list-group-item">Fréquence : <%= @ad.frequency %></li>
					<% if @ad.other_propositions == true %>
					<li class="list-group-item">Cet utilisateur accepte d'autres propositions d'échange</li>
					<% else %>
					<li class="list-group-item">Cet utilisateur n'accepte pas d'autres propositions d'échange</li>
					<% end %>
					<li class="list-group-item">Disponibilités : <%= @ad.availability %></li>
					
					<%= link_to "Contacter l'utilisateur", '#', class: "btn btn-primary btn-sm mt-3" %>
				</ul>

		</div>
