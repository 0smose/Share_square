<section>
	<div class="container">
		<div class="row">
			<div class="col">
				<h1>New message to <%= "#{@recipient.first_name} #{@recipient.last_name}" %></h1>

				<%= form_for @personal_message do |f| %>
				<%= hidden_field_tag 'recipient_id', @recipient.id %>

				<%= f.text_area :body %>

				<%= f.submit %>
				<% end %>				
			</div>
		</div>
	</div>
</section>
