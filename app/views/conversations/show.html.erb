<section>
	<div class="container">
		<div class="col col-md-8 offset-md-2">
			<div class="row mt-4">
				<div class="col">
					<h4>
						<%= user_avatar(@conversation.with(current_user).id, "avatar avatar mr-1") %> <%= "#{@conversation.with(current_user).first_name} #{@conversation.with(current_user).last_name}" %>
					</h4>
				</div>
			</div>

			<div class="row m-0 p-0 mt-0 bg-light-grey">

				<div class="col col-md-12 p-4">
					<div id="conversation-main" data-conversation="<%= @conversation.id %>">
						<div id="conversation-body" class="scrollbar">
							<!-- Show every message in the conversation -->
							<%= render @conversation.personal_messages %>
						</div>
					</div>				
					<div class="row">
						<div class="col">
							<hr class="mt-3 mb-4">

							<div class="container">
								<div class="row no-gutter">

									<!-- Text area -->
									<%= text_area_tag 'text-field', nil, class: "col border py-2", placeholder: 'Ã‰crire un nouveau message...', data: {conversation: @conversation.id} %>

									<!-- Button send -->
									<%= button_tag(type: 'button', class: 'col-2 py-2 btn btn-primary btn ml-2', id: 'send-btn', data: {conversation: @conversation.id} ) do %>
									<i class="fas fa-paper-plane"></i>
									<% end %>

								</div>
							</div>
						</div>
					</div>
				</div>
			</div>

		</div>
	</div>
</section>
