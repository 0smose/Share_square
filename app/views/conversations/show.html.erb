<section>
	<div class="container">
		<div class="col col-8 offset-md-2">
			<div class="row">
				<div class="col">
					<h4>
						<%= user_avatar(@conversation.with(current_user).id, "avatar avatar mr-1") %> <%= "#{@conversation.with(current_user).first_name} #{@conversation.with(current_user).last_name}" %>
					</h4>
				</div>
			</div>

			<div class="row m-0 p-0 mt-0 bg-light-grey">
				<div class="col p-4">
					<div id="conversation-main">
						<div id="conversation-body" class="scrollbar">
							<!-- Show every message in the conversation -->
							<%= render @conversation.personal_messages %>
						</div>
					</div>				
					<div class="row">
						<div class="col">
							<hr class="mt-3 mb-4">

							<div class="container">
								<div class="row no-gutter">
									<textarea placeholder="Ã‰crire un nouveau message... lala" clas="col-9 border py-2" id="text-field"></textarea>
									<button class="col-2 py-2 btn btn-primary btn ml-1" id="send-btn"><i class="fas fa-paper-plane"></i>
									</button>
								</div>
							</div>
						</div>
					</div>

					<!-- This is a hidden div to access the conversation id in the channel via conversations.coffee -->
					<div id="conversation_id", style="display:none"><%= @conversation.id %></div>
				</div>
			</div>

		</div>
	</div>
</section>
