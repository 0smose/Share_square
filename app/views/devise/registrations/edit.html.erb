<section>
  <div class="container mt-3">
    <div class="row">
      <div class="col-md-6 offset-md-3">
        <h4>Mettre à jour mon mot de passe</h4>

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="field mb-3">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
        <% end %>

        <div class="field mb-3">
          <%= f.label "Nouveau mot de passe" %><br />
          <%= f.password_field :password, autocomplete: "new-password" %><br>
          <% if @minimum_password_length %>
          <em><%= @minimum_password_length %> caractères minimum</em>
          
          <% end %>
        </div>

        <div class="field mb-3">
          <%= f.label "Confirmez votre nouveau mot de passe" %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %> 
        </div>

        <div class="field mb-3">
          <%= f.label "Mot de passe actuel" %><br>
          <%= f.password_field :current_password, autocomplete: "current-password" %> <br><i>(nous avons besoin de votre mot de passe actuel pour confirmer vos modifications)</i>
        </div>

        <div class="actions my-3">
          <%= f.submit "Mettre à jour", class: 'btn btn-primary' %>
        </div>
        <% end %>
      </div>
    </div>
    <div class="row mt-4">
      <div class="col-md-6 offset-md-3">
        <h5>Supprimer mon compte</h5>

        <p>Non satisfait(e) ? <%= button_to "Supprimer mon compte", registration_path(resource_name), data: { confirm: 'Êtes-vous sûr(e) ? La suppression du compte est définitive.'}, class: 'btn btn-danger btn-sm', method: :delete %></p>
  

        <%= link_to "Retour", :back %>
      </div>
    </div>
  </div>
</section>