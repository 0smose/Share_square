<div class="container-fluid">
  <div class="row">

     <!-- Dashboard Menu -->
     <nav class="col-md-2 d-none d-md-block bg-light sidebar">
      <div class="sidebar-sticky">
        <ul class="nav flex-column">
          <li class="nav-item">
           <h6 class="sidebar-heading d-flex justify-content-between align-items-center px-3 mt-4 mb-1 text-muted">
            <span>Dashboard</span>
          </h6>
          <%=link_to "Accueil", admins_index_path, class: "nav-link active" %>  
          </li>
          <li class="nav-item">
           <%=link_to "Annonces", admins_ads_path, class: "nav-link active" %> 
          </li>
          <li class="nav-item">
           <%=link_to "Utilisateurs", admins_users_path, class: "nav-link active" %> 
