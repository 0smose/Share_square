<section>
    <div class="container">
        <div class="row">
            <!-- Partial for the dashboard menu -->
            <%= render 'admins/dashboard' %>

            <!-- Main content -->
            <div class="col-sm-12 col-md-9">
                <div class="container">
                    <!-- Ads -->
                    <div class="row">
                        <div class="col">
                            <h4 class="p-2 bg-primary-alt"><i class="fas fa-sticky-note text-primary"></i> Créer une annonce</h4>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col mx-2">
                            <!-- Form zone -->
                            <%= form_tag url_for(action: 'create'), method: "post" do %>

                            <%= label_tag 'Son titre', nil, class: "font-weight-bold" %>
                            <%= text_field_tag 'title', @ad.title, class: "form-control mb-3" %>

                            <%= label_tag 'Sa description', nil, class: "font-weight-bold" %>
                            <%= text_area_tag 'description', @ad.description, class: "form-control mb-3"  %>


                            <%= label_tag 'Son type d\'activité', nil, class: "font-weight-bold" %>
                            <%= select_tag 'type',options_for_select(["Coup de main", "Cours", "Projet"]), class: "form-control mb-3" %>

                            <%= label_tag 'Sa catégorie', nil, class: "font-weight-bold" %>
                            <%= select_tag 'category',options_for_select(["Cuisine", "Artisanat",  "Musique", "Art", "Jeux", "Technologie", "Mécanique", "Sport", "Jardinage", "Écriture", "Langues"]), class: "form-control mb-3" %>

                            <%= label_tag 'Sa durée', nil, class: "font-weight-bold" %>
                            <%= select_tag 'duration',options_for_select(["1h", "2h", "3h", "3h-5h", "Encore plus"]), class: "form-control mb-3" %>

                            <%= label_tag 'Sa fréquence', nil, class: "font-weight-bold" %>
                            <%= select_tag 'frequency',options_for_select(["Quotidien", "Tout les deux jours", "Hebdomadaire", "Mensuel"]), class: "form-control mb-3" %>

                            <p class="font-weight-bold"> Êtes vous ouvert à d'autres modalités d'échange ?</p>

                            <%= radio_button_tag(:other_propositions, "true") %>
                            <%= label_tag(:other_propositions_yes, "Yes", class: "mr-2") %>
                            <%= radio_button_tag(:other_propositions, "false") %>
                            <%= label_tag(:other_propositions_no, "No", class: "mb-3") %>

                            <p>
                                <%= label_tag 'Vos Disponibilités', nil, class: "font-weight-bold" %>
                                <%= select_tag 'availability',options_for_select(["Le matin", "Le midi", "Le soir", "N'importe quand", "Seulement le week-end"]), class: "form-control mb-3" %>
                            </p>

                            <%= submit_tag "Créer l'annonce", class: "btn btn-primary mb-3" %>

                            <% end %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>